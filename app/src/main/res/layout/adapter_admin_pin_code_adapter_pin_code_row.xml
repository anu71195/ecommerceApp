<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/adapter_admin_pin_code_adapter_pin_code_row_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/adapter_admin_pin_code_adapter_pin_code_row_deleteImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_baseline_remove_circle_24"
        app:layout_constraintBottom_toBottomOf="@id/adapter_admin_pin_code_adapter_pin_code_row_textView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/adapter_admin_pin_code_adapter_pin_code_row_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>